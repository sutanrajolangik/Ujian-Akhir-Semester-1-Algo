public class Main
{
	public static void LeftTriangleStar(int n){
	   int i , j;
	   for(i = 0; i < n; i++){
	       for(j=2*(n-i); j>=0; j--){
	           System.out.print(" ");
	       }
	       for(j=0; j<=i; j++)
	       {
	           System.out.print("langit");
	       }
	       System.out.println();
	   }
	}
	
    public static void main(String args [])
    {
        int n = 10;
        LeftTriangleStar(n);
    }
}
