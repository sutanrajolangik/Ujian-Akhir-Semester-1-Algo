public class Main
{
	public static void PyramidPattern(int n)
	{
	    for (int i=0; i<n; i++)
	    {
	        for(int j=n; j>1; j--)
	        {
	            System.out.print("");
	        }
	        for(int j=0; j<=i; j++)
	        {
	            System.out.print("Bisa");
	        }
	        System.out.println();
	    }
	}
	public static void main(String args [])
	{
	       int n = 10;
	       PyramidPattern(n);
	}    
}
 
